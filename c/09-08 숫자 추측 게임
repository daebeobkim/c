#include <stdio.h>
#define _CRT_SECURE_NO_WARNINGS

int main(void)
{
	int a, b, c, d;
	c = 0;
	a = 50;
	for (;;)
	{
		printf("수를 입력하시오:");
		scanf("%d", &b);
		if (b < a) {
			printf("입력한 수가 답보다 작습니다\n");
			c++;
		}
		else if (b > a) {
			printf("입력한 수가 답보다 큽니다\n");
			c++;
		}
		else if (b = a)
		{
			printf("정답입니다\n");
			printf("시행 횟수:%d", c);
			break;
		}
		
	}
	return 0;
}
	
