#include <stdio.h>
#define _CRT_SECURE_NO_WARNINGS

int main(void)
{
	int number;
	printf("일수를 알고 싶은 달을 입력하시오:");
	scanf("%d", &number);

	if (number == 1)
		printf("1월의 일수는 31일입니다");
	else if (number == 2)
		printf("2월의 일수는 28일입니다");
	else if (number == 3)
		printf("3월의 일수는 31일입니다");
	else if (number == 4)
		printf("4월의 일수는 30일입니다");
	else if (number == 5)
		printf("5월의 일수는 31일입니다");
	else if (number == 6)
		printf("6월의 일수는 30일입니다");
	else if (number == 7)
		printf("7월의 일수는 31일입니다");
	else if (number == 8)
		printf("8월의 일수는 31일입니다");
	else if (number == 9)
		printf("9월의 일수는 30일입니다");
	else if (number == 10)
		printf("10월의 일수는 31일입니다");
	else if (number == 11)
		printf("11월의 일수는 30일입니다");
	else if (number == 12)
		printf("12월의 일수는 31일입니다");
	return 0;
}
